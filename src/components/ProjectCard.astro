---
// src/components/ProjectCard.astro
const {
    title,
    description,
    technologies = [],
    liveLink = "#",
    sourceLink = "#",
} = Astro.props;
---

<div class="project-card">
    <div class="flex flex-col md:flex-row gap-6 rounded-[24px] p-6 hover-card">
        <div class="w-full md:w-1/3">
            <div
                class="h-48 bg-gray-800 rounded-[18px] flex items-center justify-center overflow-hidden"
            >
                <slot name="image">
                    <span class="text-zinc-400">Project Screenshot</span>
                </slot>
            </div>
        </div>
        <div class="w-full md:w-2/3">
            <h3
                class="text-[#FFFFFF] text-2xl font-medium opacity-80 antialiasing"
            >
                {title}
            </h3>
            <div class="flex flex-wrap gap-2 my-3">
                {
                    technologies.map((tech) => (
                        <span class="px-3 py-1 text-xs rounded-full bg-zinc-800/80 text-zinc-300">
                            {tech}
                        </span>
                    ))
                }
            </div>
            <p class="text-[#FFFFFF] text-lg mt-2 opacity-60">
                {description}
            </p>
            <div class="flex gap-3 mt-4">
                <a href={liveLink} class="project-link">View Live</a>
                <a href={sourceLink} class="project-link">Source Code</a>
            </div>
        </div>
    </div>
</div>
